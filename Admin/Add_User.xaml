<Window x:Class="Admin_PV.Add_User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Admin_PV"
        mc:Ignorable="d"
        Title="Add_User" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите логин" FontSize="20" />
            <TextBox x:Name="LogBox" FontSize="20"/>
            <Label Content="Введите пароль" FontSize="20"/>
            <TextBox x:Name="PassBox" FontSize="20"/>
            <Label Content="Введите должность" FontSize="20"/>
            <ComboBox x:Name="Combo_box" FontSize="20">
                <ComboBoxItem Content="Слесарь"/>
                <ComboBoxItem Content="Кладовщик"/>
                <ComboBoxItem Content="Директор"/>
                <ComboBoxItem Content="Отдел кадров"/>
            </ComboBox>
            <Button Content="Зарегестрировать" FontSize="20" Click="Button_Click"/>
            <Button Content="назад" FontSize="20" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
