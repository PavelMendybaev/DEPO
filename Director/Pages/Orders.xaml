<Page x:Class="WpfApp37.Pages.Orders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp37.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Orders">

    <Grid>
        <DataGrid AutoGenerateColumns="False" x:Name="dg1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Трамвай" Binding="{ Binding NumberTram}"></DataGridTextColumn>
                <DataGridTextColumn Header="Время" Binding="{ Binding Time}"></DataGridTextColumn>
                <DataGridTextColumn Header="Стоимость" Binding="{ Binding Cost}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
